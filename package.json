{
  "name": "simplesim",
  "version": "1.0.0",
  "description": "Simple alternative to Simulationcraft intended for easy customization",
  "main": "SimpleSim.js",
  "scripts": {
    "electron": "electron dist/main/electron.js",
    "server": "node dist/server/server.js",
    "build": "webpack --config webpack.main.js && webpack --config webpack.renderer.js && webpack --config webpack.server.js",
    "dev:electron": "concurrently \"webpack --config webpack.main.js --watch\" \"webpack --config webpack.renderer.js --watch\" \"wait-on dist/main/electron.js && electron dist/main/electron.js\"",
    "dev:server": "concurrently \"webpack --config webpack.server.js --watch\" \"webpack --config webpack.renderer.js --watch\" \"nodemon dist/server/server.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mattilego/SimpleSim.git"
  },
  "keywords": [
    "worldofwarcraft",
    "simulationcraft",
    "simulator"
  ],
  "author": "Mattias Strandberg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mattilego/SimpleSim/issues"
  },
  "homepage": "https://github.com/Mattilego/SimpleSim#readme",
  "dependencies": {
    "electron": "^28.3.0",
    "blockly": "^12.3.0"
  },
  "devDependencies": {
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4", 
    "webpack-merge": "^5.10.0",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "nodemon": "^3.0.2"
  }
}
